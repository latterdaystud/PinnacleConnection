<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10sp"
        android:paddingEnd="10sp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/urgentBar"
        android:text="TextView" />

    <TextView
        android:id="@+id/timeSent"
        android:paddingStart="10sp"
        android:paddingEnd="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/description"
        android:layout_toEndOf="@+id/textView9"
        android:text="TextView" />

    <TextView
        android:id="@+id/urgentBar"
        android:paddingStart="10sp"
        android:paddingEnd="10sp"
        android:layout_width="match_parent"
        android:layout_height="5sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/urgentBar2"
        android:layout_width="match_parent"
        android:layout_height="5sp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/attatchedImage"
        android:paddingEnd="10sp"
        android:paddingStart="10sp" />

    <ImageView
        android:id="@+id/attatchedImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="100sp"
        android:paddingEnd="100sp"
        android:adjustViewBounds="true"
        android:layout_below="@+id/timeSent"
        android:layout_centerHorizontal="true"
        android:scaleType="fitStart"
        app:srcCompat="@android:color/background_light" />

</RelativeLayout>
