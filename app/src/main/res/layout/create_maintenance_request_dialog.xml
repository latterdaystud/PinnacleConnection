<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editTextIssueInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:hint="What's the Issue?"
        android:inputType="textMultiLine" />

    <CheckBox
        android:id="@+id/checkBoxIsUrgent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editTextIssueInput"
        android:layout_below="@+id/editTextIssueInput"
        android:layout_marginTop="14dp"
        android:text="Urgent" />

    <ImageButton
        android:id="@+id/imageButtonAttachPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/checkBoxIsUrgent"
        android:layout_alignEnd="@+id/editTextIssueInput"
        app:srcCompat="@drawable/ic_menu_gallery" />
</RelativeLayout>
